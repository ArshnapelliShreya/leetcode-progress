2144. Minimum Cost of Buying Candies With Discount
//USING SORTING 
class Solution {
    public int minimumCost(int[] cost) {
        Arrays.sort(cost);
        int n=cost.length;
        int sum=0,c=0;
        for(int i=n-1;i>=0;i--){
          if(c!=2){
            sum+=cost[i];
            c++;
          }else{
            c=0;
          }
        }
        return sum;
    }
}
