1004. Max Consecutive Ones III
class Solution {
    public int longestOnes(int[] nums, int k) {
     int n=nums.length;
     int temp=0;
     int res=0;
     int l=0;
     for(int r=0;r<n;r++){
        if(nums[r]==0){
            temp+=1;
        }
        while(temp>k){
            if(nums[l]==0){
                temp-=1;
            }
            l++;
        }
        res=Math.max(res,r-l+1);
     }  
     return res; 
    }
}
