1876. Substrings of Size Three with Distinct Characters
class Solution {
    public int countGoodSubstrings(String s) {
        int n=s.length();
        int ans=0;
        int k=3;
        HashMap<Character,Integer> hm=new HashMap<>();
        int l=0;
        for(int r=0;r<n;r++){
            char ch=s.charAt(r);
            hm.put(ch,hm.getOrDefault(ch,0)+1);
            if(r-l==k){
                char c=s.charAt(l);
                hm.put(c,hm.get(c)-1);
                if(hm.get(c)==0){
                    hm.remove(c);
                }
            
            l++;
            }
            if(hm.size()==k){
                ans++;
            }
        }
        return ans;

    }
}
